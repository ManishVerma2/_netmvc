@model List<Department>

<h1>@ViewData["Title"]</h1>
<h1>@ViewData["desc"]</h1>

<img src="~/image/blog-3.jpg" asp-append-version="true" />
<a asp-action="Create" asp-controller="Department" class="btn btn-info">Create Department</a>

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>Id</th
        ><th>Department Name</th>
        <th>Location</th>
        <th>Action</th>
    </tr>
    @foreach(var dept in Model)
    {
        <tr>
            <td>@dept.Id</td>
            <td>@dept.DName</td>
            <td>@dept.Loc</td>
            <td>
                @*//Manually tag*@
                @*<a href="/Department/Details/@dept.Id" class="btn btn-primary">View</a>*@
                @*//html helper*@
                @*@Html.ActionLink("View","Details","Department",new {id=dept.Id})*@
                @*asp tag helpers*@
                <a class="btn btn-primary" asp-action="Details" asp-controller="Department" asp-route-id="@dept.Id">View</a> 
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>

@section Scripts{
    <script src="~/js/manishjffile.js"></script>
}